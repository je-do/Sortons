{% extends 'base.html.twig' %}
{% block title %}Détail de l'event
{% endblock %}

{% block body %}
	<div class="container my-4">
	<div id="eventDetails"></div>
	<div class="text-center">
		<h2 class="section-heading text-uppercase">Détail de la sortie</h2>
	</div>
		<div class="row">
			<div class="col">
				<p>
					<strong>Nom de la sortie :</strong>
					{{ event.name }}
				</p>
				<p>
					<strong>Date et heure de la sortie :</strong>
					{{ event.startDateTime | date('d/m/Y H:m')}}</p>
				<p>
					<strong>Date limite d'inscription :</strong>
					{{ event.endRegisterDate | date('d/m/Y')}}</p>
				<p>
					<strong>Nombre de places :</strong>
					{{ event.nbParticipantMax}}</p>
				<p>
					<strong>Durée :</strong>
					{{ event.duration}}
					minutes</p>
				<div>
					<strong>Description et infos :</strong>
					{{ event.details | nl2br }}</div>
			</div>
			<div class="col">
				<p>
					<strong>Campus :</strong>
					{{ event.Campus.name}}</p>
				<p>
					<strong>Ville :</strong>
					{{ event.Location.City.name}}</p>
				<p></p>
				<p>
					<strong>Lieu :</strong>
					{{ event.Location.name}}</p>
				<p>
					<strong>Rue :</strong>
					{{ event.Location.street}}</p>
				<p>
					<strong>Code Postal :</strong>
					{{ event.Location.City.postalCode}}</p>
				<p>
					<strong>Latitude :</strong>
					{{ event.Location.latitude}}</p>
				<p>
					<strong>Longitude :</strong>
					{{ event.Location.longitude}}</p>
			</div>
		</p>
	</div>

	<h3 class="mt-3">Liste des participants Inscrits</h3>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Pseudo</th>
				<th>Nom</th>
			</tr>
		</thead>
		<tbody>
			{% for p in events.participants %}
				<tr onclick="window.location='{{ path('app_view_participant',{id:p.id})}}';">
					<td>{{p.pseudo}}</td>
					<td>{{p.firstName}}
						{{p.lastName}}</td>
				</tr>
			{% endfor %}

		</tbody>
	</table>
</div>{% endblock %}
