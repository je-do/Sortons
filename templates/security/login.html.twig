{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	{# <img src="{{ asset('img/palm-trees-sky.jpg') }}"> #}
	<form method="post">
		{% if error %}
			{#<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>#}
			<div class="alert alert-danger">Identifiants erronnés</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				Bonjour
				{{ app.user.firstName }}
				{#<a href="{{ path('app_logout') }}">Se déconnecter</a>#}
			</div>
		{% endif %}

		<div class="col-4 my-4 m-auto">
			<h1 class="h3 mb-3 font-weight-normal">Merci de vous connecter</h1>


			<label for="inputEmail">Email ou Pseudo</label>
			<input type="text" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
			<label for="inputPassword">Mot de passe</label>
			<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


			{#..Jerome: j'ai décommenté ce pavé pour activer le Remember me..#}
			{# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality. #}
			{# See https://symfony.com/doc/current/security/remember_me.html #}

				<div class="checkbox mb-3"> <label>
					<input type="checkbox" name="_remember_me" checked/>
					Se souvenir de moi
				</label>
			</div>
			{#....#}

			<button class="btn btn-lg btn-primary" type="submit">
				Se connecter
			</button>
		</div>
	</form>
{% endblock %}
