<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
		<meta name="description" content="" />
		<meta name="author" content="" />
		<title>{% block title %}Sortir!
			{% endblock %}</title>

		<!-- Favicon-->
		<link rel="icon" type="image/x-icon" href="{{ asset("img/favicon.ico") }}" />

		<!-- Font Awesome icons (free version)-->
		<script src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" crossorigin="anonymous"></script>

		<!-- Test icone oeil-->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer"/>

		<!-- Google fonts-->
		<link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
		<link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" type="text/css" />

		<!-- Core theme CSS (includes Bootstrap)-->
		<link href="https://unpkg.com/bootstrap-table@1.19.1/dist/bootstrap-table.min.css" rel="stylesheet">
		<link href="{{ asset("css/styles.css") }}" rel="stylesheet" />
		<link href={{asset("css/stylesPerso.css")}} rel="stylesheet"/>

		<!-- Fade animation -->
		<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>

	<body id="page-top">
		<!-- Navigation-->
		<nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
			<div class="container">

				<a class="navbar-brand" href="{{path('home')}}"><img src="https://fontmeme.com/permalink/220315/ce6ef7b8a216932d300b80d871cb12fc.png" alt="logo ENI" /></a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
					Menu
					<i class="fas fa-bars ms-1"></i>
				</button>
				<div class="collapse navbar-collapse" id="navbarResponsive">
					<ul class="navbar-nav text-uppercase ms-auto py-4 py-lg-0">
						{% if is_granted('ROLE_USER') %}
							<li class="nav-item"><a class="nav-link"  href="{{path('event_create')}}#creation-sortie">Créer une sortie</a></li>
							<li class="nav-item"><a class="nav-link" href="{{path('app_update_participant')}}#profil">Mon profil</a></li>
							<li class="nav-item"><a class="nav-link" href="{{path('app_logout')}}">Se déconnecter</a></li>
						{% else %}
							<li class="nav-item"><a class="nav-link" href="{{path('app_login')}}">Se connecter</a></li>
						{% endif %}
					</ul>
				</div>
			</div>
		</nav>

		{% block masthead %}
		<!-- Masthead-->
		<header class="masthead">
			<div class="container">
				<div class="masthead-subheading">Les sorties de l'ENI</div>
				<div class="masthead-heading text-uppercase">It's Nice To Meet You</div>
				<a class="btn btn-primary btn-xl text-uppercase" href="{{path('home')}}#sorties">Voir les sorties</a>
			</div>
		</header>
		{% endblock %}

		<!-- Body enfants-->
		<div class="container-fluid">
			<div class="container">
				<div class="d-flex flex-column min-vh-100">
					{% for label, messages in app.flashes %}
						{% for message in messages %}
							<div class="alert alert-{{ label }}" role="alert">
								{{ message }}
							</div>
						{% endfor %}
					{% endfor %}

					{% block body %}{% endblock %}
				</div>
			</div>
		</div>

		<!-- Footer-->
		<footer class="footer py-4">
			<div class="container">
				<div class="row align-items-center">
					<div class="col-lg-12 my-3 my-lg-0">
					<span> Site créé par </span>
						<span>Claire Goarnisson <a href="https://www.linkedin.com/in/claire-goarnisson/" target="_blank"><i class="fab fa-linkedin-in"></i></a> </span>
					<span> - Jérôme Donal <a href="https://www.linkedin.com/in/jerome-donal/" target="_blank"><i class="fab fa-linkedin-in"></i></a></span>
					<span> - Tudwal Corlouer <a href="https://github.com/Tudwal" target="_blank"><i class="fa-brands fa-github"></i></a></span>
					</div>
				</div>
			</div>
		</footer>

<!-- Bootstrap core JS-->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
<script src="https://unpkg.com/bootstrap-table@1.19.1/dist/bootstrap-table.min.js"></script>

<!-- Core theme JS-->
<script src={{asset("js/scripts.js")}}></script>

<!-- Fade animation JS -->
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

<script> AOS.init(); </script>

</body>

</html>